<style>
    .context-container {
        position: absolute;
        border-radius: 2px;
        width: 0;
        height: 0;
        overflow: hidden;
        background-color: #fcfbfa;
        padding: 0;
        border: 1px solid #fff0;
        transition: all 300ms cubic-bezier(0.215, 0.610, 0.355, 1);
    }

    .appear {
        width: 8rem;
        height: auto;
        padding: 12px 0;
        border: 1px solid #dadada;
    }

    .appear > * {
        padding: 6px 16px !important;
    }
</style>

<div class="context-container @Classes"
     style="top: @_y; left: @_x;">
    @ChildContent
</div>

@code {
    private string _x => X + "px";
    private string _y => Y + "px";

    [Parameter]
    public double X { get; set; }

    [Parameter]
    public double Y { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public bool Visible { get; set; }

    private string Classes => (Visible) ? "appear" : "";

    public void SetPosition(double x, double y) {
        X = x;
        Y = y;
        StateHasChanged();
    }

}